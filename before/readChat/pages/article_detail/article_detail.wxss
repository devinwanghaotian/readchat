/* 用户卡片信息 */
.header {
    padding-top: 10%;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 20rpx;
}

.user_message_detail {
    border-bottom: 1rpx dashed gray;
    margin-bottom: 30rpx;
}

.user_message_detail .user_image image {
    height: 150rpx;
    width: 150rpx;
    border-radius: 50%;
}

.user_detail {
    display: flex;
    flex-direction: column;
    flex-grow: 2;
    margin-left: 20rpx;
}

.user_message_detail .user_name {
    color: black;
    font-weight: 800;
    font-size: 30rpx;
}

.user_address {
    font-size: 25rpx;
    color: #999;
}

.content .time {
    display: block;
    text-align: right;
    color: gray;
    margin-top: 20rpx;
    font-size: small;
    margin-right: 50rpx;
}

/* 评论-回复-回复评论显示区域 */
.container {
    width: 718rpx;
    margin-top: 39rpx;
    padding-left: 32rpx;
}

.total {
    font-size: 24rpx;
    color: #999999;
    margin-left: 1rpx;
}

.container_inp {
    width: 661rpx;
    height: 32rpx;
    background-color: #F2F2F2;
    border-radius: 8rpx;
    padding: 17rpx 0rpx 15rpx 25rpx;
    margin-top: 24rpx;
    margin-bottom: 47rpx;
}

.container_place {
    font-size: 24rpx;
    color: #999999;
}

.container-item {
    margin-top: 20rpx;
    display: flex;
    margin-bottom: 34rpx;
    align-items: flex-start;
}

.item_img {
    width: 64rpx;
    height: 64rpx;
    margin-right: 17rpx;
}

.item_right {
    display: inline-block;
    width: 636rpx;
    border-bottom: 2rpx solid #E5E5E5;
    padding-bottom: 40rpx;
}

.right_name {
    font-size: 24rpx;
    color: #999999;
}

.right_content {
    width: 603rpx;
    margin-top: 20rpx;
}

.right_content_txt {
    font-size: 26rpx;
    color: #333333;
}

.right_content_txt2 {
    font-size: 24rpx;
    color: #CCCCCC;
    margin-left: 30rpx;
}

.reply {
    display: flex;
    margin-top: 32rpx;
    align-items: flex-start;
}

.reply_img {
    width: 40rpx;
    height: 40rpx;
    margin-right: 17rpx;
}

.reply_right {
    display: inline-block;
    width: 546rpx;
}

/* 结束 */
.end {
    margin-top: 47rpx;
    margin-bottom: 48rpx;
    text-align: center;
}

.end_txt {
    font-size: 24rpx;
    color: #999999;
}

/* 底部评论 */
.foot {
    width: 686rpx;
    padding: 17rpx 32rpx;
    background-color: #FFFFFF;
    box-shadow: 0rpx -1rpx 4rpx 0rpx rgba(0, 0, 0, 0.08);
    position: fixed;
    bottom: 0;
    left: 0;
}

.say {
    display: inline-block;
    width: 400rpx;
    padding: 20rpx 0rpx 10rpx 24rpx;
    background-color: #F2F2F2;
    border-radius: 8rpx;
}

.flex {
    display: flex;
    align-items: center;
}

.say_img {
    width: 24rpx;
    height: 24rpx;
    margin-right: 13rpx;
    /* vertical-align: 10rpx; */
}

.say_inp {
    display: inline-block;
    width: 300rpx;
    height: 33rpx;
}

.say_place {
    font-size: 28rpx;
    color: #333333;
}

.foot .unLike {
    font-size: 45rpx;
    margin-left: 30rpx;
    margin-right: 15rpx;
    color: #CCCCCC;
}

.foot .like {
    font-size: 45rpx;
    margin-left: 30rpx;
    margin-right: 15rpx;
    color: rgb(25, 137, 250);
}

.foot .unCollect {
    font-size: 45rpx;
    margin-left: 30rpx;
    margin-right: 15rpx;
    color: #CCCCCC;
}

.foot .collect {
    font-size: 45rpx;
    margin-left: 30rpx;
    margin-right: 15rpx;
    color: rgb(25, 137, 250);
}

.foot_num {
    font-size: 24rpx;
    vertical-align: 10rpx;
}