@import "./assets/iconfont.wxss";

page {
    background-color: #bbf1fa;
    background-attachment: fixed;
    position: relative;
}

.container {
    position: fixed;
    width: 100%;
    margin-top: 50rpx;
}

.tip {
    font-size: 30rpx;
    font-weight: 200;
    color: royalblue;
    text-align: center;
    margin-top: 10rpx;
}

.iconfont {
    font-size: 30rpx;
    height: 60rpx;
}

.submit {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 95%;
    margin: 0 auto;
    margin-top: 20rpx;
}

.toolbar {
    display: flex;
    flex-direction: column;
    font-family: "Helvetica Neue", "Helvetica", "Arial", sans-serif;
}

.toolbar view {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.submit {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.uploadImg {
    margin-top: 50rpx;
    width: 500rpx;
    height: 90rpx;
    color: black;
    background-color: #F0F0F2;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, .5);
  }

.button {
    margin-top: 10rpx;
    width: 300rpx;
    height: 90rpx;
    color: white;
    background-color: #393D4E;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, .5);
}


.ql-container {
    width: 95%;
    margin: 0 auto;
    padding: 10rpx;
    height: 600rpx;
    background: #fff;
    font-size: 16px;
    line-height: 1.5;
    border: 1rpx solid #f2f2f2;
    border-radius: 15rpx;
}