.main {
    padding-top: 10%;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 20rpx;
}

.user_message_detail {
    border-bottom: 1rpx dashed gray;
    margin-bottom: 30rpx;
}

.user_message_detail .user_image image {
    height: 150rpx;
    width: 150rpx;
    border-radius: 50%;
}

.user_detail {
    display: flex;
    flex-direction: column;
    flex-grow: 2;
    margin-left: 20rpx;
}

.user_message_detail .user_name {
    color: black;
    font-weight: 800;
    font-size: 30rpx;
}

.user_address {
    font-size: 25rpx;
    color: #999;
}

.body {
    z-index: 9999999999999;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, .5);
    /* margin: 20rpx; */
    margin-left: 50rpx;
    margin-right: 50rpx;
    background-color: rgba(255, 255, 255, 0.8);
    border-radius: 20rpx;
    padding: 30rpx;
    margin-bottom: 30rpx;
}

.body .content {
    margin-top: 20px;
    position: relative;
    max-height: 80vh;
    word-break: break-all;
    word-wrap: break-word;
    white-space: pre-wrap;
    display: -webkit-box;
    /* 超出隐藏 */
    overflow: hidden;
    /*超出显示为省略号*/
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
}

.body .foot {
    font-weight: 200;
    font-size: 25rpx;
    margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
}

.user_message {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.user_message .user_image image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.message_detail {
    display: flex;
    flex-direction: column;
    margin-left: 10rpx;
}

.user_name {
    font-size: 30rpx;
    font-weight: 800;
}

.textarea {
    width: 100%;
    height: 83%;
}

.loading {
    text-align: center;
    padding-top: 20rpx;
    padding-bottom: 30rpx;
}
